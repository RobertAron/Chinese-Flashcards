{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "generate": {
      "dependsOn": ["^generate"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "tscheck": {
      "dependsOn": ["^tscheck"],
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "format:fix": {
      "cache": false
    },
    "check": {
      "cache": false
    },
    "check:fix": {
      "cache": false
    }
  },
  "envMode": "loose"
}
