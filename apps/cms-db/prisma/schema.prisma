// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../dist"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Course {
  slug     String   @id
  title    String
  lessons  Lesson[]
  ordering Int
}

// Core Words 1
// Core Words 2
// Numbers
// Colors
model Lesson {
  slug       String  @id
  title      String
  drills     Drill[]
  ordering   Int
  course     Course  @relation(fields: [courseSlug], references: [slug])
  courseSlug String
}

model Drill {
  slug        String    @id
  title       String
  description String
  lesson      Lesson    @relation(fields: [lessonSlug], references: [slug])
  words       Words[]
  phrases     Phrases[]
  lessonSlug  String
  order       Int       @default(0)
}

model Words {
  id             Int       @id @default(autoincrement())
  characters     String    @unique
  pinyin         String
  meaning        String
  frequencyRank  Int
  emojiChallenge String?
  drills         Drill[]
  phrases        Phrases[]
}

model Phrases {
  id             Int     @id @default(autoincrement())
  characters     String
  pinyin         String
  meaning        String
  emojiChallenge String?
  drills         Drill[]
  words          Words[]
}
