generator client {
  provider     = "prisma-client"
  output       = "../dist/prisma"
  moduleFormat = "esm"
}

datasource db {
  provider = "sqlite"
  url      = ""
}

model Course {
  slug      String   @id
  title     String
  ordering  Int
  createdAt DateTime @default(now())
  Lesson    Lesson[]
}

model Drill {
  slug        String    @id
  title       String
  description String
  lessonSlug  String
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  Lesson      Lesson    @relation(fields: [lessonSlug], references: [slug])
  Phrases     Phrases[] @relation("DrillToPhrases")
  Words       Words[]   @relation("DrillToWords")
}

model Lesson {
  slug       String   @id
  title      String
  ordering   Int
  courseSlug String
  createdAt  DateTime @default(now())
  Drill      Drill[]
  Course     Course   @relation(fields: [courseSlug], references: [slug])
}

model Phrases {
  id             Int           @id @default(autoincrement())
  characters     String
  pinyin         String
  meaning        String
  emojiChallenge String?
  createdAt      DateTime      @default(now())
  Drill          Drill[]       @relation("DrillToPhrases")
  Words          Words[]       @relation("PhrasesToWords")
  PhraseWords    PhraseWords[]
}

model PhraseWords {
  id        Int     @id @default(autoincrement())
  order     Int
  phrasesId Int
  wordsId   Int
  word      Words   @relation(fields: [wordsId], references: [id])
  phrase    Phrases @relation(fields: [phrasesId], references: [id])

  @@unique([phrasesId, order])
}

model Words {
  id             Int           @id @default(autoincrement())
  characters     String
  pinyin         String
  meaning        String
  frequencyRank  Int
  emojiChallenge String?
  hskLevel       HskLevel?
  Drill          Drill[]       @relation("DrillToWords")
  Phrases        Phrases[]     @relation("PhrasesToWords")
  PhraseWords    PhraseWords[]
}

enum HskLevel {
  hsk1
  hsk2
  hsk3
  hsk4
  hsk5
  hsk6
  hsk7
}
